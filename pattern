import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int input=s.nextInt();
		for(int i=0;i<=input;i++)
		{
		    for (int space = 1; space <= input - i;space++) {
		        System.out.print(" ");
		    }
		    for(int j=i;j>=0;j--)
		        System.out.print(j+"");
		    for(int j=1;j<=i;j++)
		        System.out.print(j+"");
		    System.out.println();   
		  
		}
	}
}
